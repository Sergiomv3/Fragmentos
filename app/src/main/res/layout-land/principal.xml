<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:name="com.example.sergio.fragment2.FragmentoUno"
            android:id="@+id/fragment3"
            tools:layout="@layout/fragment_fragmento_uno"
            android:layout_weight="2" />

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:name="com.example.sergio.fragment2.FragmentoDos"
            android:id="@+id/fragmento"
            tools:layout="@layout/fragment_fragmento_dos"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>